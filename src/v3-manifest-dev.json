{
  "manifest_version": 3,
  "name": "Onlinks Dev",
  "permissions": [
    "activeTab",
    "scripting",
    "tabGroups",
    "bookmarks",
    "declarativeContent",
    "storage"
  ],
  "background": {
    "service_worker": "background.ts"
  },
  "action": {
    "default_icon": {
      "16": "public/icons/dev/16.png",
      "24": "public/icons/dev/24.png",
      "32": "public/icons/dev/32.png"
    },
    "default_popup": "public/index.html"
  },
  "icons": {
    "48": "public/icons/dev/48.png",
    "64": "public/icons/dev/64.png",
    "128": "public/icons/dev/128.png",
    "256": "public/icons/dev/256.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+U",
        "mac": "Command+U"
      }
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["public/onboarding.html"],
      "matches": ["*://*/*"]
    }
  ],
  "host_permissions": [
    "https://link-roamer.zaidmukaddam.repl.co/*",
    "http://localhost:8080/*"
  ]
}
